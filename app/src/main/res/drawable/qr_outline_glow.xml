<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glow effect -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <gradient
                android:type="radial"
                android:gradientRadius="43dp"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#5531C343"
                android:centerColor="#2231C343"
                android:endColor="#0031C343" />
        </shape>
    </item>

    <!-- Outline -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="3dp"
                android:color="@color/pastel_green" />
        </shape>
    </item>
</layer-list>
