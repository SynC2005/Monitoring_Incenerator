<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".QRScannerActivity">

    <!-- ðŸ”¹ Tampilan kamera -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ”¹ Frame fokus QR -->
    <View
        android:id="@+id/focusFrame"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:background="@drawable/focus_frame_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ”¹ Tombol Back: ImageButton bundar -->
    <ImageButton
        android:id="@+id/btnBackHome"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_round_transparent_button"
        android:src="@drawable/ic_arrow_back"
        android:scaleType="centerInside"
        android:padding="12dp"
        android:contentDescription="Kembali ke Home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ðŸ”¹ Overlay teks hasil -->
    <LinearLayout
        android:id="@+id/overlayContainer"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arahkan kamera ke QR mesin"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="8dp"
            android:background="#66000000"
            android:elevation="4dp"
            android:layout_marginBottom="12dp"
            android:clipToOutline="true" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
