<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomNavigation"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/navbar_background"
    android:elevation="12dp"
    android:paddingHorizontal="12dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- ðŸ”¹ Home Button -->
    <LinearLayout
        android:id="@+id/navHome"
        style="@style/BottomNavItem"
        android:contentDescription="Home">

        <ImageView
            android:id="@+id/iconHome"
            style="@style/BottomNavIcon"
            android:src="@drawable/ic_home"
            app:tint="#777777" />

        <TextView
            android:id="@+id/labelHome"
            style="@style/BottomNavLabel"
            android:text="Home" />
    </LinearLayout>

    <!-- ðŸ”¹ Data Button -->
    <LinearLayout
        android:id="@+id/navTimeline"
        style="@style/BottomNavItem"
        android:contentDescription="Data">

        <ImageView
            android:id="@+id/iconTimeline"
            style="@style/BottomNavIcon"
            android:src="@drawable/ic_data"
            app:tint="#777777" />

        <TextView
            android:id="@+id/labelTimeline"
            style="@style/BottomNavLabel"
            android:text="Data" />
    </LinearLayout>

    <!-- ðŸ”¹ Floating QR Button -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center">

        <!-- âœ… Outline Glow -->
        <View
            android:id="@+id/qrGlowOutline"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:background="@drawable/qr_outline_glow" />

        <!-- âœ… Floating Action Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAdd"
            android:layout_width="55dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_qr"
            app:tint="@android:color/white"
            app:backgroundTint="@color/pastel_green"
            app:elevation="8dp"
            app:maxImageSize="28dp"
            android:contentDescription="Scan QR" />
    </FrameLayout>

    <!-- ðŸ”¹ Notification Button -->
    <LinearLayout
        android:id="@+id/navNotification"
        style="@style/BottomNavItem"
        android:contentDescription="Notification">

        <ImageView
            android:id="@+id/iconNotification"
            style="@style/BottomNavIcon"
            android:src="@drawable/ic_notification"
            app:tint="#777777" />

        <TextView
            android:id="@+id/labelNotification"
            style="@style/BottomNavLabel"
            android:text="Notifikasi" />
    </LinearLayout>

    <!-- ðŸ”¹ Profile Button -->
    <LinearLayout
        android:id="@+id/navProfile"
        style="@style/BottomNavItem"
        android:contentDescription="Profile">

        <ImageView
            android:id="@+id/iconProfile"
            style="@style/BottomNavIcon"
            android:src="@drawable/ic_profile"
            app:tint="#777777" />

        <TextView
            android:id="@+id/labelProfile"
            style="@style/BottomNavLabel"
            android:text="Profil" />
    </LinearLayout>

</LinearLayout>
