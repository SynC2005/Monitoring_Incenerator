<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Mesin Baru"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- ðŸ”¹ Field Nama Mesin -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilMachineName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Incenerator"
        app:startIconDrawable="@drawable/ic_incenerator"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/pastel_green"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        android:layout_marginBottom="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etMachineName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:inputType="textPersonName"
            android:padding="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- ðŸ”¹ Field Link Lokasi -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilLocationLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Link Lokasi Google Maps"
        app:startIconDrawable="@drawable/ic_location"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/pastel_green"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        android:layout_marginBottom="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etLocationLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:inputType="textUri"
            android:padding="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- ðŸ”¹ Tombol Simpan -->
    <Button
        android:id="@+id/btnSaveMachine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="16sp"
        android:backgroundTint="@color/pastel_green"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp" />

</LinearLayout>
