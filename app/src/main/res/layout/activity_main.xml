<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".MainActivity">

    <!-- Main Content with ScrollView -->
    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="#F5F5F5"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Container 1: Data Display -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDataDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_data"
                            app:tint="#31c343" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Data Banyak Sampah"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:textSize="14sp"
                            android:textColor="#2196F3"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>

                    <!-- Content Placeholder -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:text="Your data will be displayed here"
                        android:textSize="14sp"
                        android:textColor="#999999"
                        android:gravity="center"
                        android:background="#F9F9F9"
                        android:padding="16dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Container 2: Monitoring Results -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMonitoring"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/baseline_map_24"
                            app:tint="#E53935" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text=" Titik Lokasi Mesin"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvOpenMap"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Buka peta"
                            android:textSize="14sp"
                            android:textColor="#2196F3"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>

                    <!-- Machine Locations List -->
                    <LinearLayout
                        android:id="@+id/machineLocationsList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#F9F9F9"
                        android:padding="12dp"
                        android:minHeight="150dp">

                        <TextView
                            android:id="@+id/tvMapStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Memuat lokasi mesin..."
                            android:textSize="14sp"
                            android:textColor="#999999"
                            android:gravity="center"
                            android:padding="16dp" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Container 3: Additional Info -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAdditionalInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_incenerator"
                            app:tint="#FF9800" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Data Mesin Aktif"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/tvAddMachine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tambah Mesin"
                            android:textSize="14sp"
                            android:textColor="#2196F3"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>

                    <!-- Content Placeholder -->
                    <LinearLayout
                        android:id="@+id/machineContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:background="#F9F9F9" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar (Included from navbar.xml) -->
    <include
        android:id="@+id/bottomNavigation"
        layout="@layout/navbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
